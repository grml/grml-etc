################################################################################

. /usr/lib/grml/core.sh

if checkbootparam nocolor ; then
   RC_NOCOLOR=yes
   . /etc/grml/lsb-functions
else
   . /etc/grml/lsb-functions
fi

# finished booting
einfo "Finished execution of main grml startup." ; eend 0

## END OF FILE #################################################################
